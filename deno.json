{
	"tasks": {
		"start": "deno run -A --unstable main.ts"
	},
	"lint": {
		"rules": {
			"tags": [
				"fresh",
				"recommended"
			]
		}
	},
	"exclude": [
		"**/_fresh/*"
	],
	"fmt": {
		"include": [
			"./"
		],
		"exclude": [
			"static/",
			"_fresh"
		],
		"options": {
			"useTabs": true,
			"lineWidth": 80,
			"indentWidth": 4,
			"singleQuote": true,
			"proseWrap": "always"
		}
	},
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "preact"
	},
	"nodeModulesDir": true
}
