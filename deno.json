{
	"tasks": {
		"start": "deno run -A --unstable main.ts",
		"serve": "deno run -A --unstable server.ts",
		"build": "deno run -A --unstable mod.ts build",
		"check": "deno fmt --check && deno lint && deno check **/*.ts "
	},
	"lint": {
		"rules": {
			"tags": [
				"fresh",
				"recommended"
			]
		}
	},
	"exclude": [
		"**/_fresh/*"
	],
	"fmt": {
		"include": [
			"./"
		],
		"exclude": [
			"static/",
			"_fresh"
		],
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"singleQuote": true,
		"proseWrap": "always"
	},
	"imports": {
		"$std/": "https://deno.land/std@0.212.0/"
	},
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "preact"
	},
	"nodeModulesDir": true
}
